<div class="col-md-3 left-menu">
    <h3>Create</h3>
    <%= link_to 'Create new category', new_category_path,  :class => 'btn btn-default create-btn shadow' %>
    <h3>Settings</h3>
    <%= link_to 'Back to list', tasks_path,  :class => 'btn btn-default setting-btn shadow' %>
</div>


<div class="col-md-9 main">
    <%t = 'Categories' %>
    <%= render :partial => 'title', :locals => {:t => t} %>

    <% @categories.each do |category| %>
        <div class="panel cat-panel">
            <div class="panel-heading">    
                <h3 class="panel-title"><%= category.name %></h3>
            </div>
            <div class="panel-body">
                <%= link_to 'Edit', edit_category_path(category),:class => 'btn btn-default cat-btn' %>
                <%= link_to 'Delete', category_path(category), :method => :delete,:class => 'btn btn-default cat-btn' %>
            </div>
        </div>
    <% end %>
    
    <%= paginate @categories %>
</div>