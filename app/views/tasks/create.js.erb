var html = "<%= escape_javascript(render :partial => 'title', :locals => {:t => 'To-do list'}) %>";
$("#tasks").html(html);
var html = "<%= escape_javascript(render :partial => 'tasks', :locals => {:tasks => @tasks }) %>";
$("#tasks").append(html);
