<div class="col-md-6 col-md-offset-3 panel form-panel">
    <div class="panel-body">
        <%t = 'Create a new task' %>
        
        <%= render :partial => 'title', :locals => {:t => t} %>
        
        <%= form_for @task, :url => tasks_path do |f| %>
            <%= render :partial => 'form', :locals => {:f => f} %>
        
            <%= f.submit 'Create', :class => 'btn btn-default create-btn'%>
        
        <% end %>
    </div>
</div>

