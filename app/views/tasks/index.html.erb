<div class="col-md-3 left-menu" >
    <h3>Classification</h3>
    <div class="btn-group-vertical choose" role="group">
    <%= link_to 'All', tasks_path, :remote => true, :class => 'btn btn-default' %>
    <%= link_to 'UnFinish', tasks_path(status: 'unfinish'), :remote => true, :class => 'btn btn-default' %>
    <%= link_to 'Finished', tasks_path(status: 'finished'), :remote => true, :class => 'btn btn-default' %>
    </div>
    <h4>Priority</h4>
    <div class="btn-group-vertical choose" role="group">
    <%= link_to 'High', tasks_path(status: 'high-priority'), :remote => true, :class => 'btn btn-default' %>
    <%= link_to 'Normal', tasks_path(status: 'normal-priority'), :remote => true, :class => 'btn btn-default' %>
    <%= link_to 'Low', tasks_path(status: 'low-priority'), :remote => true, :class => 'btn btn-default' %>
    </div>
    <h4>Category</h4>
    <div class="btn-group-vertical choose" role="group">
        <% @categories.each do |category| %>
            <%= link_to category.name, tasks_path(status: category.name), :remote => true, :class => 'btn btn-default' %>
        <% end %>
    </div>
    <h3>Search</h3>
    <%= form_tag tasks_path, :method => :get, :remote => true do %>
    <div class="input-group">
        <%= text_field_tag "keyword",'Search for...',{:class => "form-control"}%>
        <span class="input-group-btn">
            <%= submit_tag "Search", :class => 'btn btn-default' %>
        </span>
    </div>
    <% end %>
    
    <h3>Create</h3>
    <%= link_to 'Create new task', new_task_path, :remote => true,  :class => 'btn btn-default create-btn shadow' %>
    <h3>Settings</h3>
    <%= link_to 'Category Management', categories_path,  :class => 'btn btn-default setting-btn shadow' %>
</div>
<div class="col-md-9" id="main">
    <div id="flash"></div>
    <div id="tasks">
        <%= render :partial => 'title', :locals => {:t => (@Page_title || 'To-do list')} %>
        <%= render :partial => 'tasks', :locals => {:tasks => @tasks }%>
    </div>
</div>    
    <div class="modal fade" id="modal">
		<div class="modal-dialog">
           
		</div>
	</div>
</div>
